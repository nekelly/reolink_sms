# Reolink Camera Configuration
# Copy this file to .env and update with your camera details

# Camera connection settings
CAMERA_HOST=192.168.1.11
CAMERA_USERNAME=admin
CAMERA_PASSWORD=N1ngN0ng123
CAMERA_PORT=80

# Camera channel (0 for single camera, 0-N for NVR channels)
CAMERA_CHANNEL=0

# Real-time monitoring duration in seconds
# How long to monitor for live motion events
# Set to 0 for infinite monitoring (run until Ctrl+C)
MONITOR_DURATION=300

# Historical search timeframe in hours
# How far back to search for recorded motion events
HISTORY_HOURS=24

# Download settings
# Whether to download motion recordings
DOWNLOAD_RECORDINGS=true

# Directory to save downloaded recordings
DOWNLOAD_PATH=./recordings

# Logging settings
# Baichuan log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Set to CRITICAL to hide connection errors (recommended)
BAICHUAN_LOG_LEVEL=CRITICAL

# Twilio SMS notifications (optional)
# Leave blank to disable SMS notifications
